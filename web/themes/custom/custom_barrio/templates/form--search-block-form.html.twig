{#
/**
 * @file
 * Default theme implementation for a 'form' element.
 *
 * Available variables:
 * - attributes: A list of HTML attributes for the wrapper element.
 * - children: The child elements of the form.
 *
 * @see template_preprocess_form()
 */
#}
<form{{ attributes.addClass('search-form', 'search-block-form', 'form-row') }} id="custom-search-form">
  {{ children }}
  <style>
    #search-form-header-wrapper #edit-submit {
      display: none;
    }
  </style>
  <div class="form-actions">
    <button type="submit" class="custom-search-button">
      <img src="{{ base_path }}sites/default/files/2025-07/mg-glass.png" alt="Search" width="30" height="34">
    </button>
  </div>
</form>